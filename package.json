{
    "name": "vsxtools",
    "version": "1.0.0",
    "description": "Developer tools for building VSCode extensions",
    "main": "dist/cli/vsxtools.js",
    "type": "module",
    "files": [
        "dist",
        "assets",
        "types",
        "bin"
    ],
    "scripts": {
        "build": "bunx tsc",
        "start": "bun run ./src/cli/vsxtools.ts",
        "dev": "bun run build && bun link"
    },
    "exports": {
        ".": {
            "types": "./types/vsxtools.d.ts",
            "default": "./dist/lib/vsxtools.js"
        },
        "./*": {
            "types": "./types/*.d.ts",
            "default": "./dist/lib/*.js"
        }
    },
    "bin": {
        "vsxtools": "dist/cli/vsxtools.js"
    },
    "optionalDependencies": {
        "@vscode/codicons": "^0.0.39"
    },
    "keywords": [
        "vscode",
        "cli"
    ],
    "author": "ProCode Software",
    "license": "MIT",
    "devDependencies": {
        "@types/bun": "^1.3.2",
        "@types/node": "^24.10.1",
        "@typescript/native-preview": "latest",
        "@vscode/codicons": "latest"
    },
    "dependencies": {
        "@inquirer/prompts": "^7.10.1",
        "commander": "^14.0.2"
    }
}
