{
    // Visit https://aka.ms/tsconfig to read more about this file
    "compilerOptions": {
        // File Layout
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "nodenext",
        "target": "esnext",
        "lib": ["esnext"],
        "types": ["node", "bun"],
        "sourceMap": true,
        "declaration": true,
        "rewriteRelativeImportExtensions": true,

        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noUnusedParameters": false,

        // Recommended Options
        "strict": true,
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true,
        "paths": { "$/*": ["./types/*.js"] }
    },
    "include": ["./src/**/*"],
    "exclude": ["./types", "node_modules", "**/node_modules"]
}
